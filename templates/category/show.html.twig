{% extends 'base_back.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block css %}
    {{ parent() }} 
    <style>
        /* Styles CSS personnalisés */
        .container {
            margin-top: 50px;
        }
        .table {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            border-collapse: collapse;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #fff;
        }
        .table th, .table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }
        .table th {
            background-color: #f2f2f2;
            text-align: left;
        }
        .btn-container {
            text-align: center;
            margin-top: 20px;
        }
        .btn {
            margin-right: 10px;
        }
        /* Couleur personnalisée pour le titre */
        h1 {
            color: #fff; /* Blanc */
        }
    </style>
{% endblock %}


{% block body %}
    <div class="container">
        <h1 class="mb-4 text-center">Category Details</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ category.nom }}</td>
                </tr>
            </tbody>
        </table>

        <div class="btn-container">
            <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary">Edit</a>
        </div>
    </div>
{% endblock %}
