{% extends 'base_back.html.twig' %}

{% block title %}Plat index{% endblock %}

{% block body %}

<div style="padding-left: 25%;">
    <h1>Plat index</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="fadeIn">
        {% for plat in plats %}
            <tr>
                <td>{{ plat.id }}</td>
                <td>{{ plat.nom }}</td>
                <td>{{ plat.image }}</td>
                <td>{{ plat.prix }}</td>
                <td>
                    <a href="{{ path('app_plat_show', {'id': plat.id}) }}" class="btn btn-success">Afficher</a>
                    <a href="{{ path('app_plat_edit', {'id': plat.id}) }}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_plat_new') }}" class="btn btn-outline-success">Ajouter Plat</a>
</div>

<div style="padding-left: 60%;">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</div>

<style>
    .table {
        width: 100%;
        margin-top: 8%;
    }

    th, td {
        padding: 15px;
        border: 1px solid #ddd;
        text-align: left;
    }

    .btn {
        margin-right: 5px;
    }

    .pagination {
        margin-top: 20px;
        list-style: none;
        display: flex;
        justify-content: center;
    }

    .pagination li {
        margin: 0 5px;
    }

    /* Fade-in animation */
    .fadeIn {
        opacity: 0;
        animation: fadeInAnimation 0.5s forwards;
    }

    @keyframes fadeInAnimation {
        to {
            opacity: 1;
        }
    }
</style>

{% endblock %}