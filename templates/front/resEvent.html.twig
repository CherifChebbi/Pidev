{% extends 'event.html.twig' %}

{% block js %}
    {{ parent() }}
    <script>
        // Sélectionnez le formulaire de réservation
        const reservationForm = document.querySelector('.reservation-form form');

        // Écoutez l'événement de soumission du formulaire
        reservationForm.addEventListener('submit', function(event) {
            event.preventDefault(); // Empêche le comportement de soumission par défaut

            // Effectuez une requête AJAX ou une autre logique de traitement de formulaire ici
            // Par exemple, vous pouvez utiliser Fetch API pour soumettre les données du formulaire

            fetch('{{ path('app_reservation_event_new_front') }}', {
                method: 'POST',
                body: new FormData(reservationForm)
            })
            .then(response => {
                if (response.ok) {
                    // Afficher le message de succès
                    const successMessage = document.querySelector('.reservation-success');
                    successMessage.style.display = 'block';
                } else {
                    // Afficher un message d'erreur si la soumission a échoué
                    console.error('Submission failed:', response.statusText);
                }
            })
            .catch(error => console.error('Error:', error));
        });
    </script>
{% endblock %}

