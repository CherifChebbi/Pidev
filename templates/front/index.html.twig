{% extends 'front.html.twig' %}
{% block body %}

<section>
<style>
    .animated-bg-section {
        position: relative;
        overflow: hidden;
        background: linear-gradient(to right, #FFC0CB, #FFFFFF); /* You can adjust the gradient colors */
        animation: gradientAnimation 50s linear infinite alternate;
    }

    @keyframes gradientAnimation {
        0% {
            background-position: 50% 12%;
        }
        100% {
            background-position: 100% 60%;
        }
    }

     .container {
        margin-top: 4rem;

    }

    .card {
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease-in-out;
        margin-bottom: 20px; /* Add margin between cards */
		height: 400px; 
    }
	.card-body {
        padding: 50px;
    }
	.card-text {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3; /* Show only 3 lines */
        -webkit-box-orient: vertical;
    }

    .card:hover {
        box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.3);
    }

    .card-img-top {
        max-height: 400px;
        object-fit: cover; /* Ensure the image covers the container */
    }

	.card img {
        height: 200px; /* Set a fixed height for all images */
        width: 100%; /* Make images take full width within the card */
        object-fit: cover;
    }

    .btn-info {
        background-color: #17a2b8; /* Bootstrap info color */
        border-color: #17a2b8;
    }

    .btn-info:hover {
        background-color: #117a8b; /* Darker shade on hover */
        border-color: #117a8b;
    }
</style>
<section>
    <style>
        .animated-bg-section {
            position: relative;
            overflow: hidden;
            background: linear-gradient(to right, #FFC0CB, #FFFFFF);
            animation: gradientAnimation 50s linear infinite alternate;
        }

        /* Existing styles... */
    </style>

    <div class="animated-bg-section">
        <div class="container mt-4">
            <h1 class="mb-4 text-white">List Restaurant</h1>

            {# Add the search form #}
            <form action="{{ path('app_restaurant_front') }}" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search by name" value="{{ searchTerm }}">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-info">Search</button>
                    </div>
                </div>
            </form>

            <div class="row">
                {% for restaurant in restaurants %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            {% if restaurant.image %}
                                <img src="{{ asset('uploads/' ~ restaurant.image) }}" alt="{{ restaurant.nom }}" class="card-img-top img-fluid">
                            {% else %}
                                <div class="text-center py-3">
                                    No Image
                                </div>
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ restaurant.nom }}</h5>
                                <p class="card-text">{{ restaurant.description }}</p>
                                <a href="{{ path('app_restaurant_front_show', {'id': restaurant.id}) }}" class="btn btn-info btn-sm">Read More</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p class="text-center text-white">No records found</p>
                    </div>
                {% endfor %}
            </div>

            <div class="text-center mt-4">
            </div>
        </div>
    </div>
</section>


{% endblock %}