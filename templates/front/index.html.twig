{% extends 'front.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Advanced Search</h5>
                        <form action="{{ path('app_restaurant_front') }}" method="get">
                            {# Add your advanced search form fields here #}
                            <div class="form-group">
                                <label for="location">Location</label>
                                <input type="text" name="location" class="form-control" value="{{ app.request.query.get('location') }}">
                            </div>
                            <div class="form-group">
                                <label for="minPrice">Min Price</label>
                                <input type="text" name="minPrice" class="form-control" value="{{ app.request.query.get('minPrice') }}">
                            </div>
                            <div class="form-group">
                                <label for="maxPrice">Max Price</label>
                                <input type="text" name="maxPrice" class="form-control" value="{{ app.request.query.get('maxPrice') }}">
                            </div>
                            <button type="submit" class="btn btn-info btn-block">Apply Filters</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <h1 class="mb-4 text-white">List Restaurant</h1>

                {# Add the search form #}
                <form action="{{ path('app_restaurant_front') }}" method="get" class="mb-4">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control" placeholder="Search by name" value="{{ searchTerm }}">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-info">Search</button>
                        </div>
                    </div>
                </form>

                <div class="row">
                    {% for restaurant in restaurants %}
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                {% if restaurant.image %}
                                    <img src="{{ asset('uploads/' ~ restaurant.image) }}" alt="{{ restaurant.nom }}" class="card-img-top img-fluid">
                                {% else %}
                                    <div class="text-center py-3">
                                        No Image
                                    </div>
                                {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title">{{ restaurant.nom }}</h5>
                                    <p class="card-text">{{ restaurant.description }}</p>
                                    <a href="{{ path('app_restaurant_front_show', {'id': restaurant.id}) }}" class="btn btn-info btn-sm btn-block">Read More</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <p class="text-center text-white">No records found</p>
                        </div>
                    {% endfor %}
                </div>

                <div class="text-center mt-4">
                    {# Add pagination links if needed #}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
