{% extends 'base_back.html.twig' %}

{% block css %}
	{{ parent() }}
	<style>
		/* Styles CSS personnalisés */
		.container {
			margin-top: 50px; /* Marge en haut */
		}
		h1 {
			color: #ffffff; /* Couleur du titre en blanc */
			text-align: center; /* Centrage horizontal du titre */
			margin-bottom: 30px; /* Marge en bas */
		}
		th {
			color: #000000; /* Couleur du texte de l'en-tête du tableau en noir */
			background-color: #f0f0f0; /* Couleur de fond de l'en-tête du tableau */
		}
		.btn {
			margin-right: 5px; /* Marge à droite pour les boutons */
		}
	</style>
{% endblock %}

{% block js %}
	{{ parent() }}
	<script>
		function searchReservation() {
var input,
filter,
table,
tr,
td,
i,
txtValue;
input = document.getElementById("searchInput");
filter = input.value.toUpperCase();
table = document.getElementById("reservationTable");
tr = table.getElementsByTagName("tr");
for (i = 0; i < tr.length; i++) {
td = tr[i].getElementsByTagName("td")[1]; // Index 1 for column with reservation name, adjust if needed
if (td) {
txtValue = td.textContent || td.innerText;
if (txtValue.toUpperCase().indexOf(filter) > -1) {
tr[i].style.display = "";
} else {
tr[i].style.display = "none";
}
}
}
}
	</script>
{% endblock %}

{% block navbar %}
	{{ parent() }}
{% endblock %}

{% block title %}
	ReservationEvent index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Liste des réservations</h1>

		<!-- Barre de recherche -->
		<div class="input-group mb-3">
			<input type="text" id="searchInput" class="form-control" placeholder="Rechercher par nom" aria-label="Rechercher par nom" aria-describedby="button-addon2">
			<div class="input-group-append">
				<button class="btn btn-primary" type="button" id="button-addon2" onclick="searchReservation()">Rechercher</button>
			</div>
		</div>

		<table class="table table-striped" id="reservationTable">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom de l'événement</th>
					<th>Email</th>
					<th>Numéro de téléphone</th>
					<th>Date de réservation</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for reservation_event in reservation_events %}
					<tr>
						<td>{{ reservation_event.id }}</td>
						<td>{{ reservation_event.idEvent.titre }}</td>
						<td>{{ reservation_event.nom }}</td>
						<td>{{ reservation_event.email }}</td>
						<td>{{ reservation_event.numTel }}</td>
						<td>{{ reservation_event.dateReservation ? reservation_event.dateReservation|date('Y-m-d') : '' }}</td>
						<td>
							<a href="{{ path('app_reservation_event_show', {'id': reservation_event.id}) }}" class="btn btn-primary">Show</a>
							<a href="{{ path('app_reservation_event_edit', {'id': reservation_event.id}) }}" class="btn btn-warning">Edit</a>
							<form action="{{ path('app_reservation_event_delete', {'id': reservation_event.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this reservation?')">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation_event.id) }}">
								<button type="submit" class="btn btn-danger">Delete</button>
							</form>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">No records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_reservation_event_new') }}" class="btn btn-success">Create new</a>
	</div>
{% endblock %}
