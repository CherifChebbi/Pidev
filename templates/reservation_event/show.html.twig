{% extends 'base_back.html.twig' %}

{% block css %}
    {{ parent() }}
{% endblock %}

{% block js %}
    {{ parent() }}
{% endblock %}

{% block navbar %}
    {{ parent() }}
{% endblock %}

{% block title %}ReservationEvent{% endblock %}

{% block body %}
    <div class="container">
        <h1>ReservationEvent</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ reservation_event.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ reservation_event.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td>{{ reservation_event.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Numéro de téléphone</th>
                    <td>{{ reservation_event.numTel }}</td>
                </tr>
                <tr>
                    <th scope="row">Date de réservation</th>
                    <td>{{ reservation_event.dateReservation ? reservation_event.dateReservation|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_reservation_event_index') }}" class="btn btn-secondary">Back to list</a>

        <a href="{{ path('app_reservation_event_edit', {'id': reservation_event.id}) }}" class="btn btn-primary">Edit</a>
    </div>
{% endblock %}
