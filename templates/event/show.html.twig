{% extends 'base_back.html.twig' %}

{% block css %}
    {{ parent() }}
{% endblock %}

{% block js %}
    {{ parent() }}
{% endblock %}

{% block navbar %}
    {{ parent() }}
{% endblock %}

{% block title %}Event index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center" style="color: white;">Event</h1>

        <table class="table table-bordered table-striped text-center">
            <tbody>
                <tr>
                    <th style="color: black;">Id</th>
                    <td style="color: black;">{{ event.id }}</td>
                </tr>
                <tr>
                    <th style="color: black;">Titre</th>
                    <td style="color: black;">{{ event.titre }}</td>
                </tr>
                <tr>
                    <th style="color: black;">Description</th>
                    <td style="color: black;">{{ event.description }}</td>
                </tr>
                <tr>
                    <th style="color: black;">Date Début</th>
                    <td style="color: black;">{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: black;">Date Fin</th>
                    <td style="color: black;">{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th style="color: black;">Lieu</th>
                    <td style="color: black;">{{ event.lieu }}</td>
                </tr>
                <tr>
                    <th style="color: black;">Prix</th>
                    <td style="color: black;">{{ event.prix }}</td>
                </tr>
                <tr>
                    <th style="color: black;">Image</th>
                    <td style="color: black;">
                        {% if event.imageEvent %}
                            <img src="{{ asset('uploads/' ~ event.imageEvent) }}" alt="Image de l'événement" style="max-width: 100px; max-height: 100px;">
                        {% else %}
                            Aucune image
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th style="color: black;">Catégorie</th>
                    <td style="color: black;">{{ event.Idcategory.nom }}</td>
                    <!-- Utilisation du nom de la catégorie -->
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-center">
            <a href="{{ path('app_event_index') }}" class="btn btn-secondary mr-3">Back to list</a>
            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning">Edit</a>
        </div>

        {{ include('event/_delete_form.html.twig') }}
    </div>
{% endblock %}
