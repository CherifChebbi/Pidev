{% extends 'base_back.html.twig' %}

{% block css %}
	{{ parent() }}
	<style>
		/* Custom CSS styles */
		.container {
			margin-top: 50px; /* Top margin */
		}
		h1 {
			color: #ffffff; /* White title color */
			text-align: center; /* Center align title */
			margin-bottom: 30px; /* Bottom margin */
		}
		.table th {
			color: #000000; /* Black text color for table header */
		}
		.table td {
			max-width: 200px; /* Maximum width for table cells */
			overflow: hidden;
			text-overflow: ellipsis; /* Truncate text if it overflows */
			white-space: nowrap; /* Prevent text from wrapping */
		}
	</style>
{% endblock %}

{% block js %}
	{{ parent() }}
{% endblock %}

{% block navbar %}
	{{ parent() }}
{% endblock %}

{% block title %}
	Liste des événements
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Liste des événements</h1>

		<!-- Tableau des événements -->
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Description</th>
					<th>Date Début</th>
					<th>Date Fin</th>
					<th>Lieu</th>
					<th>Prix</th>
					<th>Image</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for event in events %}
					<tr>
						<td>{{ event.id }}</td>
						<td>{{ event.titre }}</td>
						<td>{{ event.description }}</td>
						<td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
						<td>{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
						<td>{{ event.lieu }}</td>
						<td>{{ event.prix }}</td>
						<td>
							{% if event.imageEvent %}
								<img src="{{ asset('uploads/' ~ event.imageEvent) }}" alt="{{ event.id }}" class="img-thumbnail" style="max-height: 50px;">
							{% else %}
								No Image
							{% endif %}
						</td>
						<td>
							<a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary">Show</a>
							<a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning">Edit</a>
							<form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this event?');">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
								<button type="submit" class="btn btn-danger">Delete</button>
							</form>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="9">No records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_event_new') }}" class="btn btn-success">Create new</a>
	</div>
{% endblock %}
