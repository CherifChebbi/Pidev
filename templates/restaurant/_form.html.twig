{{ form_start(form, {'attr': {'class': 'my-custom-form-class'}}) }}
    <div class="form-group">
        {{ form_label(form.nom, 'Nom du restaurant') }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du restaurant'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.localisation, 'Localisation') }}
        {{ form_widget(form.localisation, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la localisation du restaurant'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.image, 'Image du restaurant') }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}, 'help': 'Téléchargez une image pour le restaurant (format: jpg, jpeg, png)'}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description, 'Description du restaurant') }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Ajoutez une description du restaurant'}}) }}
    </div>

    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}